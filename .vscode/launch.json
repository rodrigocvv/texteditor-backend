    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Test",
            "program": "${workspaceRoot}\\node_modules\\mocha\\bin\\mocha",
            "envFile": "${workspaceFolder}\\desenv.env",
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "runtimeExecutable": null,
            "args": [
                "--require",
                "test/prepare",
                "test/**/*.test.js",
                "--exit"
            ],
        }
    ]
}